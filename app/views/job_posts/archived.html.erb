<%= render partial: 'nav' %>

<div class="container">
  <h1>Archived</h1>

  <br />
  <div class="container">
    <table class="table">
      <tr>
        <th></th>
        <th>Title</th>
        <th>Company</th>
        <th></th>
      </tr>
      <% @job_posts.each do |job| %>
        <tr>
          <td>
         <%= form_tag %>
           <%= check_box_tag(:finished) %>
          </td>
          <td><a href="<%= job.url %>"><%= job.title %></a></td>
          <td><%= job.company %></td>
          <td>
            <%= link_to "restore", restore_job_post_path(job), method: :patch, class: "btn btn-primary" %>
          </td>
        </tr>
      <% end %>

    </table>
  </div>
</div>
